<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="../../public/css/style.css">
</head>
<body>
    {{>navbar}}
   <div class=" alter alert-success text-center">{{messageSuccess}}</div>
      <div class="container">
    <h1>Login</h1>
    
        <form action='/login' method='POST'>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input name='email' type="email" id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter a valid email address" />
            <label class="form-label" for="form3Example3">Email address</label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input name='password' type="password" id="form3Example4" class="form-control form-control-lg"
              placeholder="Enter password" />
            <label class="form-label" for="form3Example4">Password</label>
            <div class="form-check mb-0 abc">
              <div class="left">

              <input class="form-check-input me-2" type="checkbox" value="" onclick="togglePw()" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Show Password
              </label>
              </div>
            <a href="#!" class="text-body">Forgot password?</a>
            </div>
          </div>

          <div class="d-flex justify-content-between align-items-right">
            <!-- Checkbox -->
            
            
            
          </div>
          <div class=" alter alert-danger text-center">{{message}}</div>
          

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem; ">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/register"
                class="link-danger">Register</a></p>
          </div>

        </form>
        <style>
          .container{
            width: 400px;
          }
          .container h1{
            text-align: center;
          }
          .abc{
            display: flex;
            justify-content:space-between;
          }
           .alter{
        margin: 10px;
}
            
        </style>
      </div>
      </div>
    </div>
  </div>
  
    
  
    
</section>
</body>
<script>
  function togglePw() {
  var x = document.getElementById("form3Example4");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>
</html>